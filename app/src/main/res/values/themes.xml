<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/black100</item>
        <item name="android:background">@color/white</item>
        <item name="main_activity_background">@color/blue</item>
        <item name="settings_activity_ic_tint">@color/grey</item>
        <item name="search_string_background_color">@color/grey100</item>
        <item name="search_string_item_color">@color/grey</item>
    </style>

    <style name="CustomSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/grey</item>
        <item name="trackTint">@color/grey100</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="itemBackground">@color/transparent</item>
    </style>

</resources>