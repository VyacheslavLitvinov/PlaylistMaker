<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainViewButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:textColor">@color/black100</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/indent_16</item>
        <item name="iconTint">@color/black100</item>
        <item name="iconPadding">@dimen/indent_text_button</item>
        <item name="iconGravity">textStart</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsViewButtonText">
        <item name="android:layout_marginTop">@dimen/primary_text_size_settings</item>
        <item name="android:layout_marginBottom">@dimen/primary_text_size_settings</item>
        <item name="android:layout_margin">@dimen/indent_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/indent_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="IconColor">
        <item name="android:tint">@color/grey</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_title</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black100</item>
    </style>

    <style name="BackButton">
        <item name="android:tint">@color/black100</item>
    </style>

    <style name="SearchField">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">@color/placeholder_search_string</item>
        <item name="android:drawableStart">@drawable/search_icon_16</item>
        <item name="android:background">@drawable/background_search</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="ClearSearchButton">
        <item name="android:backgroundTint">@color/grey100</item>
        <item name="android:tint">@color/placeholder_search_string</item>
    </style>

    <style name="NameTrack">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ArtistTrack">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="DurationTrack">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Ellipse">
        <item name="tint">@color/grey</item>
    </style>

    <style name="PlaceholderSearchText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaceholderImageNotResult">
        <item name="android:src">@drawable/placeholder_not_found_light</item>
    </style>

    <style name="PlaceholderImageNetwork">
        <item name="android:src">@drawable/placeholder_not_internet_light</item>
    </style>

    <style name="UpdateButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="CreateButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/indent_16</item>
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="SongsInfo">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SongsInfoValue">
        <item name="android:textColor">@color/black100</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SongsMainInfo">
        <item name="android:textColor">@color/black100</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="CreatePlaylistButton">
        <item name="android:backgroundTint">@color/black100</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomTabLayout">
        <item name="tabIndicatorColor">@color/black100</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/black100</item>
    </style>

    <style name="NotFoundMediaPlaceholderStyle" parent="PlaceholderImageNotResult">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black100</item>
        <item name="android:drawableTop">@drawable/placeholder_not_found_light</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BottomSheetPlaylists">
        <item name="android:background">@drawable/rounded_rectangle_day</item>
    </style>

    <style name="RectangleBottomSheet">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="AddToPlaylist">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black100</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="hintTextAppearance">@style/FontYSDisplayRegularSize12Weight400</item>
    </style>

    <style name="FontYSDisplayRegularSize12Weight400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="FontYSDisplayRegularSize16Weight400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MaterialAlertDialog_Center" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>

    </style>

</resources>