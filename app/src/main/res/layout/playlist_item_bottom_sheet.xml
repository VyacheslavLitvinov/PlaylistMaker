<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/layout_playlist_player"
        android:layout_height="@dimen/layout_playlist_player"
        android:layout_marginTop="@dimen/indent_8"
        android:layout_marginBottom="@dimen/indent_8"
        android:layout_marginLeft="13dp"
        android:src="@drawable/placeholder_without_cover">
    </ImageView>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/indent_8">

        <TextView
            android:id="@+id/nameTrack"
            style="@style/NameTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/unknown_playlist"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end">

        </TextView>

        <LinearLayout
            android:id="@+id/linearLayoutArtistTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/artist"
                style="@style/ArtistTrack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="@string/empty_songs"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>