<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/MainMenu.Theme.PlaylistMaker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/indent_16">

        <TextView
            android:text="@string/app_name"
            android:textColor="@color/white"
            style="@style/ToolbarText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/indent_16"
        android:layout_marginTop="@dimen/indent_8">

        <Button
            app:icon="@drawable/baseline_search_24"
            android:id="@+id/search_button"
            android:text="@string/search_button"
            style="@style/MainViewButton">
        </Button>

        <Button
            app:icon="@drawable/baseline_library_music_24"
            android:id="@+id/media_button"
            android:text="@string/media_button"
            style="@style/MainViewButton">

        </Button>

        <Button
            app:icon="@drawable/baseline_settings_24"
            android:id="@+id/settings_button"
            android:text="@string/settings_button"
            style="@style/MainViewButton">
        </Button>

    </LinearLayout>

</LinearLayout>
