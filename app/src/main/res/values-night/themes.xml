<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/black100</item>
        <item name="android:background">@color/black100</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="MainMenu.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/black100</item>
        <item name="android:background">@color/black100</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="SettingsViewButtonText">
        <item name="android:layout_marginTop">@dimen/primary_text_size_settings</item>
        <item name="android:layout_marginBottom">@dimen/primary_text_size_settings</item>
        <item name="android:layout_margin">@dimen/indent_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/indent_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="IconColor">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_title</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackButton">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SearchField">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@color/black100</item>
        <item name="android:drawableStart">@drawable/search_icon_16</item>
        <item name="android:drawableTint">@color/black100</item>
        <item name="android:background">@drawable/background_search</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black100</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="ClearSearchButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:tint">@color/black100</item>
    </style>

    <style name="NameTrack">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ArtistTrack">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="DurationTrack">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Ellipse">
        <item name="tint">@color/white</item>
    </style>

    <style name="PlaceholderSearchText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlaceholderImageNotResult">
        <item name="android:src">@drawable/placeholder_not_found_dark</item>
    </style>

    <style name="PlaceholderImageNetwork">
        <item name="android:src">@drawable/placeholder_not_internet_dark</item>
    </style>

    <style name="UpdateButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SongsInfo">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SongsInfoValue">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SongsMainInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="PlayButton">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="CreatePlaylistButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black100</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomTabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="android:background">@color/black100</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="NotFoundMediaPlaceholderStyle">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTop">@drawable/placeholder_not_found_dark</item>
    </style>

</resources>